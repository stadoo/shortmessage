{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<br>

{% for message in app.flashes('erfolg') %}
    <div class="alert alert-success"><h3>{{ message }}</h3></div>
{% endfor %}

{% for post in posts %}
  <div class="card">
    <div class="card-header">
      {{post.name}}
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{post.text}}</p>
        <footer class="blockquote-footer">{{post.date}} by <cite title="Source Title">{{post.authorid}}</cite></footer>
      </blockquote>
    </div>
  </div>
  <br>


        {% endfor %}
          <nav class="blog-pagination" aria-label="Pagination">
            <a class="btn btn-outline-primary rounded-pill" href="#">Older</a>
            <a
              class="btn btn-outline-secondary rounded-pill disabled"
              aria-disabled="true"
              >Newer</a
            >
            {{ knp_pagination_render(pagination) }}
          </nav>


{% endblock %}
