{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<br>

{% for message in app.flashes('success') %}
    <div class="alert alert-success"><h3>{{ message }}</h3></div>
{% endfor %}

{% for message in app.flashes('failure') %}
    <div class="alert alert-danger"><h3>{{ message }}</h3></div>
{% endfor %}

<p>You can create a new category here</p>

    {{ form_start(newPostForm) }}
        <div class="form-group">
            {{ form_row(newPostForm.name) }}
        </div>
        <div class="form-group">
            {{ form_row(newPostForm.save) }}
        </div>
    {{ form_end(newPostForm) }}


   <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Category</th>
        <th scope="col">Settings</th>
      </tr>
    </thead>
<tbody>
{% for category in categorys %}
<tr>
  <th>{{ category.id }}</th>
  <th>{{ category.name }}</th>
  <th><a href="{{ path('admin_categoryedit', {'id': category.id}) }}" class="btn btn-danger">Edit</a>
</th>
</tr>
  
{% endfor %}
</tbody>
</table>


{% endblock %}
