{% extends 'base.html.twig' %}

{% block title %}Shortmessage!{% endblock %}

{% block body %}
<br>
{% for message in app.flashes('success') %}
    <div class="alert alert-success"><h3>{{ message }}</h3></div>
{% endfor %}

{% for message in app.flashes('failure') %}
    <div class="alert alert-danger"><h3>{{ message }}</h3></div>
{% endfor %}

  <div class="card">
    <div class="card-header">
      <a href="{{path('view',{ 'id' : post.id })}}">{{post.name}} -{{post.id}}</a>
    </div>
    <div class="card-body" id="{{ post.id }}">
      <blockquote class="blockquote mb-0">
        <p>{{post.text}}</p>
        <footer class="blockquote-footer">{{post.date |date('d-m-Y H:i:s')}} by {{post.author}} - Category: {{post.category}} - 
        <button id="likes-{{post.id}}" class="like-btn" {{ render(controller('App\\Controller\\HomeController::getlikestatus', {'postid' : post.id}))}} onclick="likePost({{post.id}})"><i class="bi bi-hand-thumbs-up"></i> {{post.likecount}}</button> | 
        <button id="dislikes-{{post.id}}" class="dislike-btn" {{ render(controller('App\\Controller\\HomeController::getlikestatus', {'postid' : post.id}))}} onclick="dislikePost({{post.id}})"><i class="bi bi-hand-thumbs-down"></i> {{post.dislikecount}}</button>
        {% if app.user %}{% if app.user.id == post.author.id or is_granted('ROLE_ADMIN') %}<a href="{{path('editpost',{ 'id' : post.id })}}">Edit</a> - <a href="{{path('delete',{ 'id' : post.id })}}">Delete</a>{% endif %}{% endif %}
        </footer>
      </blockquote>
    </div>
  </div>
  <br>
  <div class="comment">
  {% if app.user %}
    <h3>Create a Comment</h3>
    {{ form_start(form) }}
    <div class="row g-3">
      
      <div class="col-sm-9 col-10">
        {{ form_widget(form.content) }}
      </div>
      <div class="col-sm-2 col-12">
        <button class="btn btn-primary">Send</button>
      </div>
    

    </div>
    {{ form_end(form) }}
  {% endif %}
    <hr>
      <h3>Comments</h3>
    {% for comment in comments %}
        <div class="content">
            <p>{{ comment.text }}</p>
            <small>{{ comment.date|date('Y-m-d H:i') }} by {{ comment.author }}
              {#
              <button id="likes-{{comment.id}}" class="like-btn" {{ render(controller('App\\Controller\\HomeController::getlikestatus', {'postid' : comment.id}))}} onclick="likePost({{comment.id}})"><i class="bi bi-hand-thumbs-up"></i> {{comment.likecount}}</button> | 
              <button id="dislikes-{{comment.id}}" class="dislike-btn" {{ render(controller('App\\Controller\\HomeController::getlikestatus', {'postid' : comment.id}))}} onclick="dislikePost({{comment.id}})"><i class="bi bi-hand-thumbs-down"></i> {{comment.dislikecount}}</button>
              #}
              {% if app.user %}{% if app.user.id == post.author.id or is_granted('ROLE_ADMIN') %}
              <a href="{{ path('comment_delete', {'id': comment.id, 'token': csrf_token('delete' ~ comment.id)}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</a>
              {% endif %}{% endif %}
            </small>
        </div>
    {% endfor %}


  </div>

{% block javascripts %}
    {{ parent() }}

    {% include 'js/js_likedislikeupdate.html.twig' %}
{% endblock %}

{% endblock %}
